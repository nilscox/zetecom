{
  "name": "zetecom-api",
  "description": "Zétécom - API",
  "version": "0.5.3",
  "license": "GPL-3.0-only",
  "author": "nilscox <nils@zetecom.fr>",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp -r src/modules/email/templates dist/src/modules/email",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "NODE_ENV=development nodemon --config nodemon-debug.json",
    "lint": "eslint --ext .ts src/**",
    "test:unit": "NODE_ENV=test jest --config ./jest/jest-unit.config.js",
    "test:intg": "NODE_ENV=test jest --config ./jest/jest-intg.config.js --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./jest/jest-e2e.config.js --runInBand",
    "typeorm": "ts-node --require module-alias/register ./node_modules/typeorm/cli.js",
    "db:drop": "yarn typeorm schema:drop",
    "db:migrate": "yarn typeorm migration:run",
    "db:reset": "yarn db:drop && yarn db:migrate && yarn db:seed",
    "db:seed": "ts-node src/modules/seed",
    "db:dump": "yarn db:drop && ../scripts/dump-database.sh",
    "deploy": "../scripts/deploy-api.sh"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.3",
    "@nestjs/core": "^7.6.3",
    "@nestjs/cqrs": "^7.0.1",
    "@nestjs/platform-express": "^7.6.3",
    "@nestjs/testing": "^7.6.3",
    "@nestjs/typeorm": "^7.1.5",
    "@types/node": "^14.14.14",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "connect-redis": "^5.0.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.0.0",
    "express-session": "^1.17.1",
    "glob": "^7.1.6",
    "handlebars": "^4.7.6",
    "mjml": "^4.7.1",
    "module-alias": "^2.2.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/mjml": "^4.0.4",
    "@types/module-alias": "^2.0.0",
    "@types/multer": "^1.4.5",
    "@types/redis": "^2.8.28",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.19.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "memorystore": "^1.6.4",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.7.0",
    "wait-on": "^5.2.0"
  },
  "_moduleAliases": {
    "src": "src"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  }
}
